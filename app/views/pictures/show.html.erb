<h1>画像投稿詳細画面</h1>
<p></p>

  <%= image_tag @picture.image %>
  <p>
    <strong>内容:</strong>
    <%= @picture.content %>
  </p>

  <% unless @picture.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除', favorite_path(picture_id: @picture.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入り', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-prymary' %>
    <% end %>
  <% end %>

<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Back', pictures_path %>
