<h1>New Picture</h1>

<%= form_with(model: @picture, local: true ,url: choose_new_or_edit) do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div2 class="row">
    <%= form.label :image %>
    <span class="col-xs-5 col-md-5"></span>
    <span class="col-xs-6 col-md-6">
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
    </span>
  </div2><br>

  <div class="blog_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
 

  <%= form.submit %>
<% end %>


<%= link_to 'Back', pictures_path %>
